<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:visibility="visible"
    tools:context=".Send_message">

    <EditText
        android:id="@+id/message_plane"
        android:layout_width="381dp"
        android:layout_height="134dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="450dp"
        android:background="#303030"
        android:clickable="false"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Message"
        android:inputType="textMultiLine"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reciever_code_name" />

    <Button
        android:id="@+id/send_button"
        android:layout_width="132dp"
        android:layout_height="61dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="50dp"
        android:background="#E64A19"
        android:text="SEND"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer1" />

    <EditText
        android:id="@+id/reciever_code_name"
        android:layout_width="372dp"
        android:layout_height="72dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="37dp"
        android:background="#303030"
        android:ems="10"
        android:gravity="center|left"
        android:hint="CODENAME"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/message_plane"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/question1"
        android:layout_width="374dp"
        android:layout_height="69dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="30dp"
        android:background="#303030"
        android:gravity="center|left"
        android:hint="First Security Question......"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/answer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message_plane" />

    <EditText
        android:id="@+id/answer1"
        android:layout_width="382dp"
        android:layout_height="79dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="45dp"
        android:background="#303030"
        android:ems="10"
        android:hint="Enter Answer Here.."
        android:inputType="textPersonName"
        android:scrollbarThumbHorizontal="@android:color/white"
        android:scrollbarThumbVertical="@android:color/white"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/send_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question1" />
    <EditText
        android:id="@+id/question2"
        android:layout_width="374dp"
        android:layout_height="69dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="30dp"
        android:background="#303030"
        android:gravity="center|left"
        android:hint="First Security Question......"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/answer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message_plane" />

    <EditText
        android:id="@+id/answer2"
        android:layout_width="382dp"
        android:layout_height="79dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="45dp"
        android:background="#303030"
        android:ems="10"
        android:hint="Enter Answer Here.."
        android:inputType="textPersonName"
        android:scrollbarThumbHorizontal="@android:color/white"
        android:scrollbarThumbVertical="@android:color/white"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/send_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question1" />
    <EditText
        android:id="@+id/question3"
        android:layout_width="374dp"
        android:layout_height="69dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="30dp"
        android:background="#303030"
        android:gravity="center|left"
        android:hint="First Security Question......"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/answer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message_plane" />

    <EditText
        android:id="@+id/answer3"
        android:layout_width="382dp"
        android:layout_height="79dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="45dp"
        android:background="#303030"
        android:ems="10"
        android:hint="Enter Answer Here.."
        android:inputType="textPersonName"
        android:scrollbarThumbHorizontal="@android:color/white"
        android:scrollbarThumbVertical="@android:color/white"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/send_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="187dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:text="Security Question number"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/question1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_plane" />

    <EditText
        android:id="@+id/level"
        android:layout_width="71dp"
        android:layout_height="59dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/reciever_code_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="1" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="216dp"
        android:layout_height="55dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Security Level"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/reciever_code_name"
        app:layout_constraintEnd_toStartOf="@+id/level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="95dp"
        android:drawableRight="@android:drawable/ic_media_next"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer1" />

    <Button
        android:id="@+id/prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="95dp"
        android:drawableLeft="@android:drawable/ic_media_previous"
        android:text="Prev"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer1"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/editText2"
        android:layout_width="71dp"
        android:layout_height="59dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:inputType="number"
        android:text="1"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/question1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/message_plane" />

</androidx.constraintlayout.widget.ConstraintLayout>